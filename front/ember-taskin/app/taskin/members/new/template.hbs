<h2>{{t "New member"}}</h2>

  <form>
    <div class="form-group">
      <label class="col-sm-2 control-label">{{t "Member"}}:</label>
      <div class="top dropdown col-sm-10" id="search-bar">
        <span class="fa fa-search" id="btn-search" data-toggle="dropdown"></span>
        {{input type="text" value=userValue focus-in='focusedMember' key-up=(action 'handleFilterMember') autocomplete="off" class="form-control" placeholder="Введите заказчика"}}
        <ul class="dropdown-menu">
          {{#each choiceUser as |user|}}
            <li class="list-group-item" onclick={{action "memberClick" user.full_name user.id}}>{{user.full_name}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">{{t "Right"}}:</label>
      <div class="col-sm-10">
        <select class="form-control" onchange={{action "selectRight" value="target.value"}}>
          <option value="">{{t "Select right"}}</option>
          <option value="EX">{{t "Executor"}}</option>
          <option value="WA">{{t "Watcher"}}</option>
          <option value="AD">{{t "Administrator"}}</option>
        </select>
      </div>
    </div>

    <button type="submit" class="btn btn-success" {{action 'addMember' model}}>
      {{t "Add"}}
    </button>
  </form>
